<?php
// get class ID
$class_id = escape($_GET['CC_CLASS_ID']);

// get user's session
$session_id = escape($_GET['CC_SESSION_ID']);


// auth session
$user = authSession($session_id);
$user_id = $user['uid'];

$class_level = authClassRelationship($user_id, $class_id);

if ($class_level == false) {
	exit();
}


function nameArray($class_id) {
	$indexArr = array();
	$students = getClassStudents($class_id, 1);
	
	foreach ($students as $student) {
		$indexArr[$student['id']] = $student;
	}
	
	$teachers = getClassTeachers($class_id);
	
	foreach ($teachers as $teacher) {
		$indexArr[$teacher['id']] = $teacher;
	}
	
	return $indexArr;
}

?>